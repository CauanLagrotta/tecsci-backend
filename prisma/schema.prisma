generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usina {
  id         Int        @id @default(autoincrement())
  nome       String     @unique
  inversores Inversor[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@map("usina")
}

model Inversor {
  id        Int       @id @default(autoincrement())
  usinaId   Int
  usina     Usina     @relation(fields: [usinaId], references: [id])
  metricas  Metrica[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("inversor")
}

model Metrica {
  id                 Int      @id @default(autoincrement())
  inversorId         Int
  inversor           Inversor @relation(fields: [inversorId], references: [id])
  potenciaAtivaWatt  Float?
  temperaturaCelsius Float?
  datetime           DateTime
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([inversorId, datetime]) // Índice pra buscas rápidas
  @@map("metrica")
}
